    controllerName="megaacademy.mod2aul2.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <content>
            <StepInput
                id="StepInput"
                change="onSearchCharacter"
                visible="{= ${device>/system/desktop} === true ? true : false}"
            />
            <Slider
                class="sapUiMediumMarginBottom"
                change="onSearchCharacter"
                visible="{= ${device>/system/phone} === true ? true : false}"
            />

            <VBox>
                <Title
                    text="Detalhamento do persongem selecionado"
                    class="sapUiMediumMarginTop sapUiMediumMarginBottom sapUiMediumMarginBegin sapUiMediumMarginEnd"
                />
                <Label text="{/name}" />
                <Text text="{/eye_color}" />
            </VBox>
